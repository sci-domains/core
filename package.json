{
  "name": "@secure-ci/core",
  "description": "Smart contracts for the Secure Contract Interaction protocol",
  "version": "0.0.11",
  "license": "AGPL-3.0",
  "files": [
    "**/*"
  ],
  "main": "types/index.js",
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts",
    "security",
    "sci"
  ],
  "homepage": "https://sci.domains/",
  "scripts": {
    "build": "tsc",
    "compile": "hardhat compile",
    "clean": "rm -r artifacts cache types dist publish",
    "test": "hardhat test",
    "test:cov": "hardhat coverage",
    "lint": "hardhat check; lint --fix .; prettier --write .",
    "deploy:mainnet": "hardhat ignition deploy --verify --network mainnet",
    "deploy:sepolia": "hardhat ignition deploy --verify --network sepolia",
    "prepare:package": "pnpm clean; pnpm compile; pnpm build; ts-node scripts/build-publish.ts",
    "publish:package": "pnpm prepare:build; cd publish && npm publish"
  },
  "dependencies": {
    "@ensdomains/ens-contracts": "1.1.4",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "ethers": "^6.8.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.6",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.6",
    "@nomicfoundation/hardhat-ledger": "^1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomicfoundation/ignition-core": "^0.15.7",
    "@nomiclabs/hardhat-solhint": "^3.0.1",
    "@openzeppelin/hardhat-upgrades": "^3.1.0",
    "@openzeppelin/upgrades-core": "^1.40.0",
    "@safe-global/api-kit": "^2.4.1",
    "@safe-global/protocol-kit": "^4.0.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/fs-extra": "^11",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=16.0.0",
    "chai": "^4.2.0",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "hardhat": "^2.22.5",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "1.4.1",
    "solhint": "^5.0.3",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.13",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  }
}
